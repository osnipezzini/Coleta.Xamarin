<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppColeta.MainPage">

    <ContentPage.Content>
        <StackLayout>
            <Grid HorizontalOptions="CenterAndExpand">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Text="Código de barras: "/>
                <Label Text="" Grid.Column="1" x:Name="lblCodigo"/>
                <Label Text="Nome do produto: " Grid.Row="1"/>
                <Label Text="" x:Name="lblProduto" Grid.Column="1" Grid.Row="1"/>
            </Grid>
            
            <Button Text="Scanner" Clicked="Button_OnClicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
